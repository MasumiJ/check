	public long dateToSerial(Date ob1, Date ob2) {
		long difference = ob2.getTime() - ob1.getTime();
        long diffInDays = difference / (1000 * 60 * 60 * 24);
        System.out.println(diffInDays);
        return diffInDays;

	}
